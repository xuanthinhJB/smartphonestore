<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailActivity">

    <android.support.v7.widget.Toolbar
        app:title="Chi tiết sản phẩm"
        android:background="#a91818"
        app:titleTextColor="#030303"
        android:id="@+id/toolbarDetailProduct"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgDetail"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="220dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDetailProductName"
                android:text="Tên sản phẩm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#151515"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtDetailProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#e91111"
                android:text="Gia san pham"/>
            <Spinner
                android:background="@drawable/spinner"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/spnAmount"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

            <Button
                android:id="@+id/btnAddToCart"
                android:textColor="#deaf6a"
                android:text="Add to cart"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:textColor="#098724"
            android:text="Mô tả chi tiết sản phẩm"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:paddingBottom="5dp"
                android:textColor="#0e0e0e"
                android:text="Mo ta san pham"
                android:textSize="20sp"
                android:id="@+id/txtDescribeDetailProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>